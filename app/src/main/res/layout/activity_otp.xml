    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="otp_verification"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="26dp"
            android:textColor="#ffcc33"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="otp send to"
            android:textSize="14dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="18sp"
            android:textColorHint="@color/black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputotp_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/square"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20dp"
                tools:ignore="LabelFor"
                />

            <EditText
                android:id="@+id/inputotp_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20dp"
                android:background="@drawable/square"
                tools:ignore="LabelFor"
                android:layout_margin="2dp"
                />

            <EditText
                android:id="@+id/inputotp_3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/square"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20dp"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/inputotp_4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20dp"
                android:background="@drawable/square"
                tools:ignore="LabelFor"
                android:layout_margin="2dp"
               />

            <EditText
                android:id="@+id/inputotp_5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20dp"
                android:background="@drawable/square"
                tools:ignore="LabelFor"
                android:layout_margin="2dp"
                />

            <EditText
                android:id="@+id/inputotp_6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="35dp"
                android:background="@drawable/square"
                tools:ignore="LabelFor"
                android:layout_margin="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="18sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="not_receive"
                android:textSize="16dp"
                android:layout_margin="3dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resend_otp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:textColor="#ffcc33"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18sp">

            <TextView
                android:id="@+id/buttongetotp"
                android:background="#ffcc33"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textAlignment="center"
                android:text="Verify"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:gravity="center"
                android:textStyle="bold"
                />

            <ProgressBar
                android:id="@+id/progressbar_sending_otp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

